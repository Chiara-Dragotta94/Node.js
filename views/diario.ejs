                <div class="entry-header">
                  <div class="entry-date">
                    <span class="date-day"><%= new Date(entry.createdAt || entry.created_at).getDate() %></span>
                    <span class="date-month"><%= new Date(entry.createdAt || entry.created_at).toLocaleDateString('it-IT', { month: 'short' }) %></span>
                    <span class="date-year"><%= new Date(entry.createdAt || entry.created_at).getFullYear() %></span>
                  </div>
                  <div class="entry-meta">
                    <% if (entry.mood) { %>
                      <span class="entry-mood"><%= entry.mood %></span>
                    <% } %>
                    <% if (entry.meditation_minutes > 0) { %>
                      <span class="entry-meditation">ğŸ§˜ <%= entry.meditation_minutes %> min</span>
                    <% } %>
                  </div>
                </div>
                
                <div class="entry-content">
